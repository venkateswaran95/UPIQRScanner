<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" android:background="#070707">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No saved data found. \n Scan QR code."
            android:gravity="center"
            android:textColor="#F7F3F3"/>
    <Button
            android:id="@+id/btnTakePicture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TAKE PICTURE"

            android:background="@drawable/button"
            android:textColor="#ffd3ffe5"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    <Button
            android:id="@+id/btnScanQR"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SCAN QR"

            android:background="@drawable/button"
            android:textColor="#ffd3ffe5"
            android:textStyle="bold"
            android:layout_alignParentBottom="true" android:layout_marginBottom="66dp"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/capturedImage"
            android:layout_above="@+id/btnTakePicture"/>
</RelativeLayout>